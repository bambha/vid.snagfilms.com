        window.fbAsyncInit = function() {
          FB.init({
              appId: '227991737252697',
              status : true,
              cookie : true,
              oauth: true,
              email: true,
              xfbml  : true
          });
        
          for (var i=0;i<SNAG.onFBInit.length;i++) {
            if (typeof SNAG.onFBInit[i] === 'function') {
              SNAG.onFBInit[i](FB);
            }
          }            

        } //window.fbAsyncInit
        
        
        $('.login a').on('click', function(event) { 
          event.preventDefault();
          
          
          document.cookie = 'fbsr_227991737252697 = ""; expired=0; path=/; domain=.snagfilms.com';
          
          FB.logout(function() {
		    				      
				location.reload();
			  		
          });
        });

		 
		  
        (function(d){
          var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
          js = d.createElement('script'); js.id = id; js.async = true;
          js.src = "//connect.facebook.net/en_US/all.js";
          d.getElementsByTagName('head')[0].appendChild(js);
        }(document)); 
      
        

        $.getScript("http://cdn.snagfilms.com/resource/assets/scripts/footer.fe07b593fd7360f3b76858b7fe5aa8e8.js", function(){});             
      },'low');
      
    </script>
    
  <script type="text/javascript">     

    $(document).ready(function() {        
      SNAG.loadOnReady.execute('high');      
      if(SNAG.deferLoad) {      
        setTimeout(function(){
          if(!SNAG.loadFinished) {
            SNAG.runWhenReady();
          }
        }, 10000);  
      }
      else {
        SNAG.runWhenReady();
      }           
          
    });
  </script>      

<!-- Sailthru Horizon -->
<script type="text/javascript">
    (function() {
        function loadHorizon() {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.src = location.protocol + '//ak.sail-horizon.com/horizon/v1.js';
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
        }
        loadHorizon();
        var oldOnLoad = window.onload;
        window.onload = function() {
            if (typeof oldOnLoad === 'function') {
                oldOnLoad();
            }
            Sailthru.setup({
                domain: 'horizon.snagfilms.com'
            });
        };
    })();
</script>
      
  </body>
</html>